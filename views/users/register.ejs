<%- include('../partials/head', {title: 'Creá tu cuenta', stylesheets: ["/css/form.css", "/css/header.css", "/css/footer.css"]}) %>

<body>
    <%- include('../partials/header') %>  
        <div class="form-banner-register">
            <img src="/images/background-black-design-14.webp" alt="banner">
        </div>
    </header>

    <main class="all-form-register">
        <!-- register form -->
        <div class="center"></div>
        <h1>Crea tu cuenta</h1>

        <form action="/user/register" method="POST">
            <!-- Username -->
            <div class="txt_field">
                <input type="text" name="firstname" required>
                <span></span>
                <label> Nombre</label>
            </div>
            <!-- Nombre y apellido -->
            <div class="txt_field">
                <input type="text" name="lastname" required>
                <span></span>
                <label> Apellido</label>
            </div>
            <div class="txt_field">
                <input type="text" name="username" required>
                <span></span>
                <label> Nombre de usuario</label>
            </div>
            <!-- email -->
            <div class="txt_field">
                <input type="text" name="email" required>
                <span></span>
                <label> Email</label>
            </div>
            <!-- pass -->
            <div class="txt_field">
                <input type="password" name="pass" required>
                <span></span>
                <label>Contraseña</label>
            </div>
            <div class="txt_field">
                <input type="password" name="passconfirm" required>
                <span></span>
                <label>Contraseña</label>
            </div>

            <input type="submit" value="Ingresa" >
            <div class="signup_link">
                Ya estas registrado? <a href="/user/login">Inicia sesion</a>
            </div>
            


        </form>
    </main>
    <%- include('../partials/footer') %>  
</body>

</html>
