<header>
    <div class="logo">
        <a href="/"><img src="/images/logo.svg" alt="logo-banner"></a>
    </div>

     <% if (locals.userLogged) { %>
        <% if (locals.userLogged.admin == 1) { %> 
       <div class="adminbuttom">
                <a href="/admin">
                    <i class="fa-solid fa-screwdriver-wrench"></i>
                </a>
            </div>
         <% } %>
    <% } %> 
    
    <nav>
        <section class="nav-left">
            <ul class="sites">
                <nav class="esp-nav">
                    <section class="nav-container">
                        <label for="menu" class="nav-label">
                            <li class="nav-icons"><i class="fas fa-bars"></i></a></li>
                        </label>
                        <input type="checkbox" name="menu" id="menu" class="nav-checkbox">
