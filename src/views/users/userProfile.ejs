<%- include('../partials/head', {title: user.first_name + " " + user.last_name ,stylesheets: ["/css/detail.css", "/css/header.css", "/css/footer.css"]}) %>  

<body>
    <%- include('../partials/header') %>  
    </header>
    <main>
        <section>
            <article class="detail">
                <div class="contenedor-detail">
                    <div class="img-producto">
                        <img class="card-img" src="/images/users/<%= user.image %>" alt="">
                    </div>
                
                    <div class="producto-info">
                        <h3 class="card-price"><%= user.first_name + " " + user.last_name %></h3>
                        <hr style="border-color:gray">
                        <h3 class="card-price"><%= user.nickname %></h3>
                        <hr style="border-color:gray">
                        <h3 class="card-price"><%= user.email %></h3>
                        <hr style="border-color:gray">
                        <a href="/user/userProfile/edit/<%= user.id %>">
                            <button class="productEdit">Cambiá tu contraseña <i class="fa-solid fa-pen"></i></button>
                        </a>
                    </div>
                </div>
            </article>      
        </section>

    </main>
    <%- include('../partials/footer') %>  
</body>

</html>